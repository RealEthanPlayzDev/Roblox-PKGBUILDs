# Maintainer: RadiatedExodus <radiatedexodus@gmail.com>

pkgname="rojo-upliftgames"
pkgver="7.3.0-uplift.10"
pkgrel=1
pkgdesc="Rojo is a tool designed to enable Roblox developers to use professional-grade software engineering tools."
arch=("any")
url="https://github.com/UpliftGames/Rojo"
license=("MPL2")
makedepends=("rust")
conflicts=("rojo")
source=("git+https://github.com/UpliftGames/Rojo.git#tag=v${pkgver}")
sha256sums=("SKIP")

build() {
    cd "$srcdir/rojo"
    git submodule update --init --force
    cargo build --release
}

package() {
   install -Dm755 "${srcdir}/rojo/target/release/rojo" "${pkgdir}/usr/bin/rojo"
}
