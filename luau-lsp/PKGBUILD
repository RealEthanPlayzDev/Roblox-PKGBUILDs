# Maintainer: RadiatedExodus <radiatedexodus@gmail.com>

pkgname="luau-lsp"
pkgver="1.20.2"
pkgrel=1
pkgdesc="Language Server Implementation for Luau"
arch=("any")
url="https://github.com/JohnnyMorganz/luau-lsp"
license=("MIT")
makedepends=("cmake")
source=("git+https://github.com/JohnnyMorganz/luau-lsp.git#tag=${pkgver}")
sha256sums=("SKIP")

build() {
    cd "$srcdir/luau-lsp"
    git submodule update --init --force
    mkdir build
    cd build
    cmake .. -DCMAKE_BUILD_TYPE=Release
    cmake --build . --target Luau.LanguageServer.CLI --config Release
}

package() {
   install -Dm755 "${srcdir}/build/Release/x64/luau-lsp" "${pkgdir}/usr/bin/luau-lsp"
}
